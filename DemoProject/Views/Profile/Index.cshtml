
@{
    ViewBag.Title = "Profile";
}

<profile-info inline-template picpath="@ViewBag.ProfilePicturePath" 
              user="@ViewBag.user">
    <div class="row">
        <div class="col-md-5">
            <div>
                <img v-if="picturePath" :src="'/' + picturePath" height="260" width="260" class="rounded-circle" data-original-title="Usuario">
                <img v-if="!picturePath" alt="" height="260" width="260" title="" class="rounded-circle"
                     :src="dpPlaceholder"
                     data-original-title="Usuario">

                <h1>Hello {{UserInfo.Name}}</h1>
                <p>User Name : {{UserInfo.UserName}}</p>
                <p> Email : {{UserInfo.Email}}</p>
                <p>Phone Number : {{UserInfo.PhoneNumber}}</p>
                <p>Address : {{UserInfo.Address}}</p>
                <p>Date of Birth : {{UserInfo.DateofBirth}}</p>
                <form method="post" asp-controller="Profile" asp-action="Update">
                    <input type='submit' value="Update Profile" />
                </form>

            </div>
        </div>
        <div>
            <a class="btn btn-success" v-on:click="viewcv"> View CV </a>
        </div>
    </div>
</profile-info>
