
@*left - right*@

<resume-info inline-template user="@ViewBag.user" picpath="@ViewBag.ProfilePicturePath">
    <div>
        <component :is="'style'" scoped>
            .resume {
            font-family:'Source Sans Pro', sans-serif;
            font-size:20px;
            display: flow-root;
            }

            .text-center {
            text-align:center;
            }

            .img {
            width:100%;
            height:100%;
            border-radius:50%;
            background-repeat:none;
            background-position:center;
            background-size:cover;
            }

            .image {
            width:100px;
            height:100px;
            margin-top:10px;
            margin-bottom:50px;
            }

            .center {
            margin-left:auto;
            margin-right:auto;
            }

            .name {
            border:1px solid black;
            text-transform:uppercase;
            padding:10px 20px;
            margin-top:80px;
            margin-bottom:30px;
            font-family:'Open Sans', sans-serif;
            font-size:35px;
            font-weight:600;
            letter-spacing:10px;
            }

            .position {
            text-transform:uppercase;
            font-family:'Open Sans', sans-serif;
            font-size:smaller;
            color:#757575;
            margin-bottom:40px;
            }

            .contact {
            width:100%;
            padding-top:30px;
            }

            .half {
            width:44%;
            }

            .left {
            float:left;
            text-align:right;
            padding-left:4%;
            padding-right:2%;
            }

            .right {
            float:right;
            text-align:left;
            padding-right:4%;
            padding-left:2%;
            }

            .experience .experience-block span {
            width:100%;
            color:#616161;
            }

            .experience .experience-block .company {
            font-weight:bold;
            padding-bottom:5px;
            padding-top:10px;
            color:#424242;
            }

            .experience .experience-block .job-title {
            font-style:italic;
            }

            .row {
            width:100%;
            }

            .education-block span {
            color:#616161;
            width: 100%;
            }

            

            .degree {
            font-weight:bold;
            padding-top:10px;
            color:#424242;
            }

            .skills-other {
            color:#616161;
            margin-bottom:10px;
            }

            .skills {
            margin-top:30px;
            margin-bottom:10px;
            }

            .skill-block {
            padding-top:5px;
            padding-bottom:10px;
            display:inline-block;
            width:100%;
            }

            .skill {
            width:40%;
            color:#616161;
            float:left;
            }

            .skill-bar {
            float:right;
            background:#e0e0e0;
            overflow:hidden;
            height:8px;
            border-radius:3px;
            margin-top:6.5px;
            position:relative;
            width:60%;
            }

            .level {
            background:#757575;
            height:100%;
            }

            table {
            text-align:right;
            float:right;
            margin-top:5px;
            color:#616161;
            font-size:20px;
            }

            i {
            padding:2px;
            color:#616161;
            }

            h3 {
            margin-bottom:0;
            }

            span {
            display:inline-block;
            }

        </component>

        <div class="resume">
            <div class="row text-center">
                <span class="name center"> {{User.Name}}</span>
            </div>
            <div class="row text-center">
                <p class="position center">Curriculum Vitae</p>
            </div>
            <div class="row">
                <div class="image center">
                    <div class="img" v-if="picturePath" :style='{"background-image": "url(/" + picturePath + ")"}'></div>
                    <div class="img" v-if="!picturePath" :style='{"background-image": "url(" + dpPlaceholder + ")"}'></div>
                </div>
            </div>

            <div class="left half">
                <div class="experience">
                    <h3> Experience </h3>
                    <div class="experience-block" v-for="experience in User.Experiences" :key="experience.GUID">
                        <span class="company"> {{experience.Company}} </span>
                        <span class="job-title"> {{experience.Title}} </span>
                        <span class="time-period"> {{experience.StartDatr}} - {{experience.EndDate}} </span>
                        <span class="job-description"> {{experience.Description}} </span>
                    </div>
                </div>

                <div class="contact ">
                    <h3> Contact </h3>
                    <table>
                        <tr>
                            <td><a :href='"mailto:" + User.Email'> {{User.Email}} </a></td>
                            <td><i class="fa fa-envelope" aria-hidden="true"></i></td>
                        </tr>
                        <tr v-if="User.PhoneNumber">
                            <td><a> {{User.PhoneNumber}} </a></td>
                            <td><i class="fa fa-phone" aria-hidden="true"></i></td>
                        </tr>
                        <tr v-if="User.Address">
                            <td> {{User.Address}} </td>
                            <td><i class="fa fa-home" aria-hidden="true"></i></td>
                        </tr>
                        <tr v-if="User.Website">
                            <td><a :href='User.Website'> {{User.Website}} </a></td>
                            <td><i class="fa fa-globe" aria-hidden="true"></i></td>
                        </tr>
                        <tr v-if="User.Linkedin">
                            <td><a :href='User.Linkedin'> {{User.Linkedin}} </a></td>
                            <td><i class="fab fa-linkedin" aria-hidden="true"></i></td>
                        </tr>
                        <tr v-if="User.Github">
                            <td><a :href='User.Github'> {{User.Github}} </a></td>
                            <td><i class="fab fa-github" aria-hidden="true"></i></td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="right half">
                <div class="education">
                    <h3>Education</h3>
                    <div class="education-block" v-for="education in User.Educations" :key="education.GUID">
                        <span class="degree"> {{education.Degree}} </span>
                        <span class="job-description"> {{education.Description}} </span>
                    </div>
                </div>

                
                <div class="skills">
                    <h3>Skills</h3>
                    <div class="skill-block" v-for="skill in User.Skills" :key="skill.GUID">
                        <span class="skill"> {{skill.SkillName}} </span>
                        <div class="skill-bar">
                            <div :style="'width: '+skill.Level+'%'" class="level"> </div>
                        </div>
                    </div>
                </div>
                <span class="skills-other"> {{User.Knowledge}} </span>
            </div>
        </div>
    </div>
</resume-info>
