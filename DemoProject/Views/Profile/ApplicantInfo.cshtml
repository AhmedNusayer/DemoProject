
<applicant-info inline-template user="@ViewBag.User" picpath="@ViewBag.ProfilePicturePath">
    <div>
        <div class="container">
            <div class="main-body">
                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card" style="background-image: linear-gradient(to bottom right,#c2e7fe,#ede4b7);border-color: rgb(65, 19, 231);">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img v-if="picturePath" :src="'/' + picturePath" alt="Admin" class="rounded-circle" height="200" width="200">
                                    <img v-if="!picturePath" :src="dpPlaceholder" alt="Admin" class="rounded-circle" height="200" width="200">
                                    <div class="mt-3">
                                        <h4>{{User.Name}}</h4>
                                        <p class="text-secondary mb-1">{{User.Profession}}</p>
                                        <p class="text-muted font-size-sm">{{User.Address}}</p>
                                        <br />
                                        <p class="text-muted font-size-sm">{{User.Intro}}</p>
                                        <button class="btn btn-info" v-on:click="viewcv"> View Full CV </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3" style="background-image: linear-gradient(to top right,#ece4b7, #c2e7fe);border-color: rgb(65, 19, 231);">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Full Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{User.Name}}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{User.Email}}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Mobile</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{User.PhoneNumber}}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Address</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{User.Address}}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Gender</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{User.Gender}}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Nationality</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{User.Nationality}}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Website</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <a :href="User.Website">{{User.Website}}</a>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Github</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <a :href="User.Github">{{User.Github}}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</applicant-info>

